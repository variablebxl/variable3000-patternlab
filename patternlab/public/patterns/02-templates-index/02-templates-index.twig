<main class="wrapper wrapper--index">
  <header class="primary-header">
    <nav class="nav">
      <h1 class="site-title">
        <a href="{{ site_url }}">{{ site_title }}</a>
      </h1>
      <ul class="nav__list">
        {% for nav_item in nav_items %}
        <li class="nav__item">
          {% if not nav_item.go_out %}
          <a href="{{ nav_item.url }}">{{ nav_item.title }}</a>
          {% else %}
          <a href="{{ nav_item.url }}" target="_blank" class="go-out">{{ nav_item.title }}</a>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </nav>
  </header>
  <section class="index">
    <ul class="index__list">
        {% for index_item in index_items %}
        <li class="index__item">
          <a href="{{ index_item.url }}" class="item__link">
            <span class="item__date">{{ index_item.year }}</span>
            {% if index_item.thumb_highres %}
            <div class="item__thumb">
              <img src="{{ index_item.thumb_lowres }}" data-src="{{ index_item.thumb_highres }}" alt="{{ index_item.title }}">
            </div>
            {% endif %}
            <h2 class="item__title">{{ index_item.title }}</h2>
            {% if index_item.excerpt %}
            <p class="item__excerpt">{{ index_item.excerpt }}</p>
            {% endif %}
          </a>
        </li>
        {% endfor %}
    </ul>
  </section>
  <footer class="primary-footer">
    <p class="credits">Built with <a href="#">Variable 3000</a></p>
  </footer>
</main>
